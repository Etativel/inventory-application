<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <div class="sidebar">
        <ul>
          <li><a href="/dashboard/product">Inventory</a></li>
          <li><a href="/dashboard/category">Category</a></li>
        </ul>
      </div>
      <div class="main">
        <div class="input-header">
          <% if (content.name === 'product') { %> <%-
          include('./form/productForm', { data: content.category }) %> <% } else
          { %> <%- include('./form/categoryForm', { data: content.data }) %> <%
          } %>
        </div>
        <table class="main-table">
          <% if (content.name === 'product') { %> <%-
          include('./partials/showProduct', { data: content.data }) %> <% } else
          { %> <%- include('./partials/showCategory', { data: content.data }) %>
          <% } %>
        </table>
      </div>
    </div>
  </body>
</html>
