<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <div class="sidebar">
        <ul>
          <li><a href="/dashboard/product">Inventory</a></li>
          <li><a href="/dashboard/category">Category</a></li>
        </ul>
      </div>
      <div class="main">
        <% if (content.mode === 'view') { %> <%- include('./main/onView', {
        content: content }) %> <% } else if (content.mode === 'insert-product')
        { %> <%- include('./form/productForm', { data: content.category }) %> <%
        } else if (content.mode === 'insert-category') { %> <%-
        include('./form/categoryForm', { content: content }) %> <% } else if
        (content.mode === 'update-product') { %> <%-
        include('./form/productUpdateForm', { item: content.item, data:
        content.category }) %> <% } else if (content.mode === 'update-category')
        { %> <%- include('./form/categoryUpdateForm', { category: content.item
        }) %> <% } %>
      </div>
    </div>
  </body>
</html>
