<form
  action="/update-category/<%- category.id %>"
  method="POST"
  class="category-form"
>
  <input type="hidden" name="id" value="<%- category.id %>" />

  <table class="form-table">
    <thead>
      <tr>
        <th>Category Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <input
            required
            type="text"
            placeholder="Category"
            name="category"
            value="<%- category.category %>"
            class="form-input"
          />
        </td>
        <td class="cat-update-column">
          <button type="submit" class="form-button">Update</button>
        </td>
      </tr>
    </tbody>
  </table>
</form>
